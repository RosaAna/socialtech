<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>

        <item name="colorControlNormal">#d0ffffff</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:textColorHint">#d0ffffff</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="FormStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#e040fb</item>
        <item name="windowActionBar">false</item>

        <item name="android:textColorPrimary">#616161</item>
        <item name="colorControlNormal">#d0d6d6d6</item>
        <item name="android:textSize">16sp</item>

    </style>

</resources>
